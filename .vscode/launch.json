{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C#: AuthService Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build",
      "program": "${workspaceFolder}/AuthService/bin/Debug/net9.0/AuthService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/AuthService",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "C#: xUnit Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build",
      "program": "dotnet",
      "args": ["test", "${workspaceFolder}"],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    }
  ]
}
